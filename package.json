{
  "name": "meth-browser",
  "version": "1.0.0",
  "productName": "Meth",
  "author": "Ramesh Nair <ram@hiddentao.com>",
  "description": "Cross-platform Ethereum wallet and DApp browser with sync",
  "main": "electron/index.js",
  "scripts": {
    "web:electron": "electron -r babel-register ./electron",
    "web:dev": "yarn setup:dev && webpack --env.development --env.vendor && webpack-dev-server --env.development",
    "web:prod": "webpack --env.production --env.vendor && webpack --env.production --progress",
    "web:serve": "http-serve -p 3001 --gzip true ./build/web",
    "setup:dev": "node scripts/setupAppConfig.js development",
    "setup:prod": "node scripts/setupAppConfig.js production",
    "precommit": "yarn prettier && yarn lint:js:fix",
    "prettier": "prettier --config ./.prettierrc --write src/**/*.js",
    "lint:js": "eslint src/ electron/",
    "lint:js:fix": "eslint --fix src/ electron/",
    "test": "jest",
    "test-cov": "jest --coverage --collectCoverageFrom=src/**/*.js --coverageDirectory=coverage/",
    "codecov": "codecov",
    "web:package": "yarn setup:prod && yarn web:prod && yarn web:package-clean && yarn web:package:all",
    "web:package:all": "yarn web:package-mac && yarn web:package-win && yarn web:package-linux",
    "web:package-clean": "rm -rf ./out",
    "web:package-mac": "electron-forge package --arch=x64 --platform=darwin",
    "web:package-win": "electron-forge package --arch=x64 --platform=win32",
    "web:package-linux": "electron-forge package --arch=x64 --platform=linux",
    "build": "yarn lint:js && yarn test && yarn package",
    "react-native": "react-native",
    "mobile:setup-dev": "INSTABUG=false ANALYTICS=false node_modules/.bin/babel-node build-tools/prebuild/setup.js",
    "mobile:setup-qa": "INSTABUG=true ANALYTICS=true BUILD_MODE=qa INC_BUILD_NUMBER=true node_modules/.bin/babel-node build-tools/prebuild/setup.js",
    "mobile:setup-prod": "INSTABUG=true ANALYTICS=true BUILD_MODE=prod INC_BUILD_NUMBER=true node_modules/.bin/babel-node build-tools/prebuild/setup.js",
    "mobile:dev": "yarn web:package-clean && yarn react-native start",
    "mobile:ios": "build-tools/run-scripts/run-ios",
    "mobile:android": "build-tools/run-scripts/run-android"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meth-browser/app.git"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "wallet",
    "dapp",
    "browser",
    "react",
    "react-native",
    "contracts",
    "blockchain",
    "electron",
    "electronjs",
    "geth",
    "parity"
  ],
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/meth-browser/app/issues"
  },
  "homepage": "https://github.com/meth-browser/app#readme",
